<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/marginPaddingVertical"
    android:paddingTop="@dimen/marginPaddingVertical"
    android:paddingStart="@dimen/marginPaddingHorizontal"
    android:paddingEnd="@dimen/marginPaddingHorizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDebtItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="7dp"

        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/marginAllContent">

            <TextView
                android:id="@+id/tvDatedebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                tools:text="tanggalUtang" />

            <TextView
                android:id="@+id/tvNameDebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="18sp"
                tools:text="namaUtang" />

            <TextView
                android:id="@+id/tvValueDebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="jumlahUtang" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>